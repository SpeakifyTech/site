generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @map("_id")
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  uploads       AudioUpload[]
  projects      Project[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model AudioUpload {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  fileName  String
  fileData  String
  fileHash  String
  analysis  AudioAnalysis?
  createdAt DateTime @default(now())

  @@unique([userId, fileHash])
  @@map("audioUpload")
}

model AudioAnalysis {
  id        String   @id @default(cuid()) @map("_id")
  uploadId  String   @unique
  upload    AudioUpload @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  transcript String
  durationSeconds Float
  wordCount Int
  wpm Float
  fillerWords Json
  totalFillerWords Int
  gaps Json
  averageGapDuration Float
  speechSegments Json
  sentenceIssues Json
  overallCoherenceScore Float
  suggestions Json
  createdAt DateTime @default(now())

  @@map("audioAnalysis")
}

model Project {
  id          String       @id @default(cuid()) @map("_id")
  name        String
  description String?
  vibe        String?
  strict      Boolean      @default(false)
  timeframe   Int          @default(0)
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  uploads     AudioUpload[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("project")
}
